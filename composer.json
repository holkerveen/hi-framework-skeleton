{
    "name": "holkerveen/hi-framework-skeleton",
    "description": "Application skeleton for the Hi Framework",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.4",
        "holkerveen/hi-framework": "^0.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@php -S localhost:8000 -t public"
        ],
        "hi": "php vendor/holkerveen/hi-framework/hi.php"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
